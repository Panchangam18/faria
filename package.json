{
  "name": "faria",
  "version": "1.0.0",
  "description": "Faria - The copilot for work on a computer",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run build:native && vite",
    "build": "npm run build:native && tsc && vite build && electron-builder",
    "build:native": "swiftc -O -o native/ax-extract native/ax-extract.swift && npx node-gyp rebuild -C native",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "ai",
    "copilot",
    "automation"
  ],
  "author": "Madhavan",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.26.0",
    "@composio/core": "^0.5.2",
    "@composio/langchain": "^0.5.2",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/transformers": "^3.4.0",
    "@langchain/anthropic": "^1.3.8",
    "@langchain/core": "^1.1.13",
    "@langchain/google-genai": "^2.1.8",
    "better-sqlite3": "^11.3.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "langsmith": "^0.4.5",
    "marked": "^17.0.2",
    "node-addon-api": "^8.5.0",
    "react-icons": "^5.5.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.faria.app",
    "productName": "Faria",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Faria needs to send AppleScript commands to control applications.",
        "NSAccessibilityUsageDescription": "Faria needs accessibility access to read screen content and automate input."
      }
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "native/ax-extract",
        "to": "native/ax-extract"
      },
      {
        "from": "native/build/Release/window_helper.node",
        "to": "native/window_helper.node"
      }
    ]
  }
}
